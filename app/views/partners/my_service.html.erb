<div class="container">
<%if @partner != nil %>
  <h1> My service </h1>

  <div class="card">
    <h2><%= @partner.name %></h2>
    <%= cl_image_tag @partner.photo.key, height: 300, width: 400, crop: :fill %>
    <p><%= @partner.description %></p>
    <p><%=@partner.price%>â‚¬</p>
    <%= link_to "Edit", edit_partner_path(@partner) %>
    <%= link_to "Delete", partner_path(@partner), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

  </div>
  <% else %>
    <h1>No Service posted!</h1>
    <div class="button-1">
      <%= link_to "Create one now !", new_partner_path %>
    </div>
    <div class="container d-flex justify-content-center align-items-start">
      <div class="pepe">
        <%= image_tag "pepe_sad" %>
      </div>
    </div>
  <% end %>
</div>
