<div class="banner d-flex justify-content-center align-items-center">
  <div>
    <% if user_signed_in? %>
    <div class="container-a">
      <div class="row">
        <div class="col-12 text-center" style="background: #ffffff80">
          <h1>Welcome <%= current_user.username %>!</h1>
        </div>
      </div>
    </div>
    <div class="button-container d-flex align-items-center">
      <div class="button-1 me-4 mt-3">
        <%=link_to "Make money! Offer your service.", new_partner_path %>
      </div>
      <div class="button-1 me-2 mt-3 ms2">
        <%=link_to "Check partners available in our network.", partners_path %>
      </div>
    </div>
    <%else%>
      <div class="container-a">
        <div class="row">
          <div class="col-12 text-center" style="background: #ffffff60">
            <span class="text1 mb-0">WELCOME TO GRAB ME</span>
            <span class="text2 text-center">Grab me or never ever</span>
          </div>
          <div class="d-flex justify-content-center">
            <div class="button-1 mt-3">
              <%= link_to "Check partners available in our network.", partners_path %>
            </div>
          </div>
        </div>
      </div>
    <%end%>
  </div>
</div>
